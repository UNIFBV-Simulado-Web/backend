generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Question {
  id                  Int     @id @default(autoincrement())
  title               String?
  discipline          String?
  language            String?
  year                Int
  context             String? @db.Text
  correct_alternative String

  alternatives Alternative[]
  files        File[]

  createdAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt

  @@map("questions")
}

model Alternative {
  id          Int     @id @default(autoincrement())
  question_id Int
  letter      String
  text        String? @db.Text
  is_correct  Boolean
  image       String?

  question Question @relation(fields: [question_id], references: [id], onDelete: Cascade)

  createdAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt

  @@unique([question_id, letter])
  @@map("alternatives")
}

model File {
  id          Int    @id @default(autoincrement())
  question_id Int
  link        String

  question Question @relation(fields: [question_id], references: [id], onDelete: Cascade)

  createdAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt

  @@map("files")
}

model User {
  id           Int    @id @default(autoincrement())
  email        String @unique
  nomeCompleto String
  senha        String
}
